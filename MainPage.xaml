<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuevaraGExamenProg2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                Text="Bienvenido a la aplicacion de Galo Guevara c:"
                FontSize="Header"/>

            <Image
                Source="picture.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                 />

            <Button 
                x:Name="GoChistes"
                Text="Chistes"
                Clicked="GoChistes_Clicked"/>
            
            <Button 
                x:Name="GoAbout"
                Text="About"
                Clicked="GoAbout_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
